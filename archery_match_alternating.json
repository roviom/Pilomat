{
  "name": "WA Match - Alternating Individual (20s per arrow)",
  "displayMode": "left-right",
  "maxCounter": 999,
  "states": [
    {
      "name": "Match Active",
      "duration": 999,
      "actions": {}
    }
  ],
  "events": [
    {
      "name": "match_start",
      "trigger": "counter",
      "value": 0,
      "actions": {
        "trafficLight": "green",
        "setDisplay": { "left": 20, "right": 20 },
        "setCountDown": { "left": true, "right": true },
        "pauseDisplay": ["right"],
        "buzzer": { "cycles": 2, "frequency": 2 }
      }
    }
  ],
  "buttons": [
    {
      "label": "START MATCH",
      "class": "start",
      "actions": {
        "resetCounter": true,
        "resetState": true,
        "trafficLight": "green",
        "setDisplay": { "left": 20, "right": 20 },
        "setCountDown": { "left": true, "right": true },
        "pauseDisplay": ["right"],
        "buzzer": { "cycles": 2, "frequency": 2 }
      }
    },
    {
      "label": "SWITCH TO LEFT",
      "class": "",
      "actions": {
        "setDisplay": { "left": 20 },
        "pauseDisplay": ["right"],
        "resumeDisplay": ["left"]
      }
    },
    {
      "label": "SWITCH TO RIGHT",
      "class": "",
      "actions": {
        "setDisplay": { "right": 20 },
        "pauseDisplay": ["left"],
        "resumeDisplay": ["right"]
      }
    },
    {
      "label": "EMERGENCY STOP",
      "class": "reset",
      "actions": {
        "trafficLight": "red",
        "pauseDisplay": ["left", "right"],
        "buzzer": { "cycles": 5, "frequency": 3 }
      }
    },
    {
      "label": "RESUME LEFT",
      "class": "",
      "actions": {
        "trafficLight": "green",
        "resumeDisplay": ["left"],
        "pauseDisplay": ["right"]
      }
    },
    {
      "label": "RESUME RIGHT",
      "class": "",
      "actions": {
        "trafficLight": "green",
        "resumeDisplay": ["right"],
        "pauseDisplay": ["left"]
      }
    },
    {
      "label": "END MATCH",
      "class": "reset",
      "actions": {
        "trafficLight": "red",
        "pauseDisplay": ["left", "right"],
        "buzzer": { "cycles": 3, "frequency": 2 }
      }
    }
  ]
}
